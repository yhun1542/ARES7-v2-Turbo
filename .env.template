# ARES7 v2 Turbo - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# API Keys (Required)
# ============================================================================

# Polygon.io API Key (Market Data)
POLYGON_API_KEY=your_polygon_api_key_here

# OpenAI API Key (Optional - for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (Optional - for Claude features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API Key (Optional)
GEMINI_API_KEY=your_gemini_api_key_here

# xAI Grok API Key (Optional)
XAI_API_KEY=your_xai_api_key_here

# ============================================================================
# Broker API Keys (Choose one or both)
# ============================================================================

# Interactive Brokers (IBKR)
IBKR_ACCOUNT=your_ibkr_account_id
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1

# Korea Investment & Securities (KIS)
KIS_APP_KEY=your_kis_app_key
KIS_APP_SECRET=your_kis_app_secret
KIS_ACCOUNT=your_kis_account_number
KIS_ACCOUNT_CODE=01

# ============================================================================
# AWS Configuration (Optional - for S3 data storage)
# ============================================================================

AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=your-s3-bucket-name

# ============================================================================
# System Configuration
# ============================================================================

# Target Volatility (Optimized: 14.5%)
TARGET_VOLATILITY=0.145

# Max Drawdown Threshold
MAX_DRAWDOWN=0.07

# Rebalance Frequency (weekly, daily)
REBALANCE_FREQUENCY=weekly

# Universe Size (Top K stocks)
UNIVERSE_TOP_K=70

# Sector Cap (Max 25%)
SECTOR_CAP=0.25

# ============================================================================
# Monitoring & Alerts
# ============================================================================

# Monitoring API Port
MONITORING_PORT=8000

# Dead-man Switch Email (for alerts)
ALERT_EMAIL=your_email@example.com

# Slack Webhook (Optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url

# ============================================================================
# Database (Optional - for production logging)
# ============================================================================

DATABASE_URL=sqlite:///ares7.db

# ============================================================================
# Logging
# ============================================================================

LOG_LEVEL=INFO
LOG_FILE=logs/ares7.log
